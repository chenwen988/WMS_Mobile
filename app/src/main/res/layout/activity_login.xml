<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bk5"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/linlogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imglogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/chilisin"
                tools:layout_editor_absoluteX="91dp"
                tools:layout_editor_absoluteY="47dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linlogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="WMS 倉儲管理系統"
                android:textAlignment="center"
                android:textSize="35sp"
                android:textStyle="bold"
                android:typeface="sans"
                tools:layout_editor_absoluteX="62dp"
                tools:layout_editor_absoluteY="155dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linUID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linTitle"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvUID"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:gravity="right"
                android:text="User ID："
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="normal" />

            <EditText
                android:id="@+id/txtUID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:background="#ffffcc"
                android:ems="8"
                android:hint="登入帳號"
                android:inputType="textPersonName"
                android:textColor="#00008B"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linPWD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linUID"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/tvPWD"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:gravity="right"
                android:text="Password："
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="normal" />

            <EditText
                android:id="@+id/txtPWD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:background="#ffffcc"
                android:ems="8"
                android:hint="登入密碼"
                android:inputType="textPassword"
                android:textColor="#00008B"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linfactory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linPWD"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:gravity="right"
                android:text="廠區："
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="normal" />

            <Spinner
                android:id="@+id/spnFactory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linSysArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linfactory"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:gravity="right"
                android:text="系統環境："
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="normal" />

            <RadioGroup
                android:id="@+id/rdgarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rdoprod"
                    android:text="正式區"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rdotest"
                    android:text="測試區"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linSysArea"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_blue"
                android:textColor="@android:color/white"
                android:text="登入"

                android:textSize="25sp" />
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/button_blue"
                android:textColor="@android:color/white"
                android:text="取消"
                android:textSize="25sp" />
        </LinearLayout>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>